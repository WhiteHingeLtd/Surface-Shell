<Window x:Name="ShutdownWindow" x:Class="ConfirmShutdown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurfaceShell"
        mc:Ignorable="d"
        Title="Confirm Shutdown" Height="400" Width="800" Background="#FF2E2E2E" Foreground="White" FontSize="36" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Are you sure you want to shutdown?" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <UniformGrid Columns="2" Margin="40,160,40,40">
            <Button x:Name="YesButton" Content="Yes" Margin="0,0,20,0" IsDefault="True"/>
            <Button x:Name="NoButton" Content="No" Margin="20,0,0,0" IsCancel="True"/>

        </UniformGrid>
    </Grid>
</Window>
